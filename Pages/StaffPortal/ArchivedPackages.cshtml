@page
@model ArchivedPackagesModel
@{
    ViewData["Title"] = "Package Archive";
}

<div class="text-center">
    <h1 class="display-4">Archive</h1>
</div>

<div>
    @* checks if there are any records in the table and shows a message if there are none *@
    @if (Model.PackageList == null || !Model.PackageList.Any())
    {
        <p>There is no package history.</p>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Resident</th>
                    <th scope="col">Unit Number</th>
                    <th scope="col">Postal Service Agency</th>
                    <th scope="col">Delivery Date</th>
                    <th scope="col">Pick-Up/Return Date</th>
                    <th scope="col">Tracking Code</th>
                </tr>
            </thead>
            <tbody>
                @* iterates through all the packages awaiting pick up and displays the info on a table *@
                @foreach(var p in Model.PackageList.Where(p => p.PackageStatus == "Fulfilled" || p.PackageStatus == "Returned to Sender"))
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => p.Resident.Name)</td>
                        <td>@(p.Resident.Name == "Unknown" ? "" : @Html.DisplayFor(modelItem => p.Resident.UnitNumber))</td>
                        <td>@Html.DisplayFor(modelItem => p.PostalServiceAgency)</td>
                        <td>@Html.DisplayFor(modelItem => p.InProcessDate)</td>
                        <td>@Html.DisplayFor(modelItem => p.OutProcessDate)</td>
                        <td>@Html.DisplayFor(modelItem => p.TrackingCode)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
